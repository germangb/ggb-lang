// compute n*(n+1)/2 in three different ways
static RESULT_LOOP1:u8
static RESULT_LOOP2:u8

let n:u8 = 15
let i:u8 = 0

(= i 1)
loop {
    if (- (+ n 1) i) {
        (+= RESULT_LOOP1 i)
        (+= i 1)
    } else {
        break
    }
}

(= i n)
loop {
    if i {
        (+= RESULT_LOOP2 i)
        (-= i 1)
        continue
    }
    break
}
